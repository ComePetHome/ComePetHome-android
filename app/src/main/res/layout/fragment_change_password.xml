<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.find.ChangePasswordFragment">

    <ImageView
        android:id="@+id/image_close_change_password"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="새 비밀번호"
        android:textAppearance="@style/Typography.regular16" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_layout_new_password_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:endIconMode="password_toggle"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_new_password_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_text"
            android:hint="비밀번호를 입력해 주세요"
            android:inputType="textPassword"
            android:textAppearance="@style/Typography.regular18" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="새 비밀번호 확인"
        android:textAppearance="@style/Typography.regular16" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_layout_check_new_password_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:endIconMode="password_toggle"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_check_new_password_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_text"
            android:hint="비밀번호를 입력해 주세요"
            android:inputType="textPassword"
            android:textAppearance="@style/Typography.regular18" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_change_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_rect_gray200_r10"
        android:stateListAnimator="@null"
        android:text="변경하기"
        android:textAlignment="center"
        android:textAppearance="@style/Typography.medium24"
        android:textColor="@color/white" />

</androidx.appcompat.widget.LinearLayoutCompat>